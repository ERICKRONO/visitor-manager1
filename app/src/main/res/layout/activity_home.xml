<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     tools:context=".Home">

    <TextView
        android:id="@+id/Vwecome"
        android:layout_width="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:text="Nationail ID is Amust"
        android:padding="10dp"
        android:layout_gravity="center"
        tools:ignore="HardcodedText" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/harrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="New visitor" />

        <TextView
            android:id="@+id/tvvisitorsin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/visitors_in"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Vwecome"
            app:layout_constraintVertical_bias="0.403" />




        <TextView
            android:id="@+id/vistorButton"
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:text="Vistors"/>
        <TextView
            android:layout_width="2dp"
            android:text="linktosite"
            android:id="@+id/link"
            android:layout_height="50dp"
            android:onClick="Browser1"/>

    </LinearLayout>






</LinearLayout>